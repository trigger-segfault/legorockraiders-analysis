      }
    },
    "references_old": {
      "name": "meta.reference.value",
      "match": "(?<=\\W|^)(([!@\\*])?((?:[^\\s\\{\\}\\|\\:\\,\\;]|\\:\\:)+))(?=[\\s\\;]|$)",
